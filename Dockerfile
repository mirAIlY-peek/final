# Используем легкий образ Node.js
FROM node:18-alpine

# Создаем рабочую папку внутри контейнера
WORKDIR /app

# Сначала копируем package.json, чтобы кэшировать установку зависимостей
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем остальной код
COPY . .

# Открываем порт (информативно)
EXPOSE 3000

# Команда запуска
CMD ["npm", "start"]
